{
    "name": "test_jest",
    "version": "1.0.0",
    "description": "simple js setup for jest/babel/eslint",
    "main": "index.js",
    "scripts": {
        "test": "jest --verbose",
        "lint": "eslint src/*.js src/__tests__/*.js"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "eslintConfig": {
        "env": {
            "browser": true,
            "node": true,
            "es6": true,
            "jest": true
        },
        "extends": "eslint:recommended",
        "parserOptions": {
            "ecmaVersion": 6,
            "sourceType": "module"
        }
    },
    "dependencies": {
        "@babel/preset-env": "^7.10.4",
        "babel-jest": "^26.1.0",
        "eslint": "^7.5.0",
        "jest": "^26.1.0",
        "jest-cucumber": "^3.0.0"
    }
}
